        <ImplicitUsings>enable</ImplicitUsings>
        <RootNamespace>eMarket.WebApi</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\Application\eMarket.Application.csproj" />
      <ProjectReference Include="..\Infrastructure\eMarket.Infrastructure.csproj" />
